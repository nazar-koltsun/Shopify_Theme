<div class="max-w-6xl mx-auto mt-8 py-4 px-4">
  <h2 class="text-3xl font-bold text-center">Reset yout password</h2>

  <div class="mt-8 w-full md:w-96 mx-auto">
    {% form 'reset_customer_password' %}
      <div class="mt-8 space-y-3">

        {% if form.errors %}
          <div class="text-red-700">
            Error: {{ form.errors | default_errors }}
          </div>
        {% endif %}

        <div>
          <label for="password" class="sr-only">Password</label>
          <input
            id="password"
            value=""
            type="password"
            name="customer[password]"
            class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-dashed focus:shadow-outline"
            placeholder="Password" />
        </div>

        <div>
          <label for="password" class="sr-only">Password Confirmation</label>
          <input
            id="password"
            value=""
            type="password"
            name="customer[password_confirmation]"
            class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-dashed focus:shadow-outline"
            placeholder="Confirm your password" />
        </div>

        <button class="w-full bg-gray-900 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
          Reset Password
        </button>
      </div>
    {% endform %}
  </div>
</div>