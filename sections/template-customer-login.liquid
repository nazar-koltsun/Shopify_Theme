<style>
  [x-cloak] {
    display: none;
  }
</style>

<div class="max-w-6xl mx-auto mt-8 py-4 px-4" x-data="{showLogin: true, showRecoverPass: false}">

  <div x-show="showLogin" class="mt-8 w-full md:w-96 mx-auto">
    <h2 class="text-3xl font-bold text-center">Sign in to your store</h2>
    {% form 'customer_login' %}
      <div class="mt-8 space-y-3">

        {% if form.errors %}
          <div class="text-red-700">
            Error: {{ form.errors | default_errors }}
          </div>          
        {% endif %}
  
        <div>
          <label for="email" class="sr-only">Email Address</label>
          <input
            id="email"
            type="email"
            name="customer[email]"
            class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-dashed focus:shadow-outline"
            placeholder="Email Address">
        </div>
  
        {% if form.password_needed %}
          <div>
            <label for="password" class="sr-only">Password</label>
            <input
              id="password"
              type="password"
              name="customer[password]"
              class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-dashed focus:shadow-outline"
              placeholder="Password" />
          </div>
        {% endif %}

        <a @click="showLogin = false, showRecoverPass = true" class="underline text-gray-500 text-xs cursor-pointer">Forgot your password?</a>

        <button class="w-full bg-gray-900 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline ">Sign In</button>
      </div>
    {% endform %}
  </div>

  <div x-cloak x-show="showRecoverPass" class="mt-8 w-full md:w-96 mx-auto">
    <h2 class="text-3xl font-bold text-center">Recover your password</h2>

    {% form 'recover_customer_password' %}
      <div class="mt-8 space-y-3">

        {% if form.errors %}
          <div class="text-red-700">
            Error: {{ form.errors | default_errors }}
          </div>          
        {% endif %}
  
        <div>
          <label for="email" class="sr-only">Email Address</label>
          <input
            id="email"
            type="email"
            name="customer[email]"
            class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-dashed focus:shadow-outline"
            placeholder="Email Address">
        </div>
        <button class="w-full bg-gray-900 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline ">Recover password</button>
        <a @click="showLogin = true, showRecoverPass = false" class="underline text-gray-500 text-xs cursor-pointer">Go to login?</a>
      </div>
    {% endform %}
  </div>
</div>