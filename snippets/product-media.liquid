{% case media.media_type %}
  {% when 'image' %}
    <img
      src="{{ media.src |  img_url: 'large' }}"
      class="w-full h-full object-cover"
      width="200"
      height="200"
      alt="{{ media.alt }}">
  {% when 'video' %}
    {{ media | video_tag: controls: '', class: 'w-full h-80' }}
  {% when 'external_video' %}
    {{ media | external_video_tag: class: 'w-full h-80' }}
  {% when 'model' %}
    {{ media | model_viewer_tag }}
  {% else %}
    {{ media | media_tag }}
{% endcase %}